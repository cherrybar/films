<div class="movie-card">
  <div class="movie-poster">
    <img class="movie-poster__image" src={{this.posterImage}} alt=""/>
  </div>
  <div class="movie-details">
    <div class="movie-details__header">
      <div class="movie-details__header-title"> {{@movie.title}} </div>
    </div>
    <div class="movie-details__footer">
      <div class="movie-details__year"> {{this.releaseYear}} </div>
    </div>
  </div>
</div>


